{% if theme.carousel_first_image == "" %}
	<div class="hero-unit">
		<h1>{{ theme.home_banner_text }}</h1>
		<p>{{ theme.home_banner_description }}</p>
	</div>
{% else %}
	<div id="mainCarousel" class="carousel">
		<div class="carousel-inner">
			{% if theme.carousel_first_image %}
				<div class="item active"><img src="{{ theme.carousel_first_image | resource_url }}"></div>
			{% endif %}
			{% if theme.carousel_second_image %}
				<div class="item"><img src="{{ theme.carousel_second_image | resource_url }}"></div>
			{% endif %}
			{% if theme.carousel_third_image %}
				<div class="item"><img src="{{ theme.carousel_third_image | resource_url }}"></div>
			{% endif %}
		</div>
		{% if theme.carousel_second_image != "" %}
			<a class="carousel-control left" href="#mainCarousel" data-slide="prev">&lsaquo;</a>
			<a class="carousel-control right" href="#mainCarousel" data-slide="next">&rsaquo;</a>
		{% endif %}
	</div>
{% endif %}
<head>
	<meta charset="utf-8">

	<title>{{ settings.store.name }}s</title>
	{{ 'normalize.css' | resource_url | stylesheet_tag  }}
	{{ 'app.css' | resource_url | stylesheet_tag  }}
	
	{{ 'v1' | api_url | script_tag }}
	
	<script src="{{'lib/foundation/' | global_url }}js/vendor/custom.modernizr.js"></script>
	<script>
	document.write('<script src=' +
	('__proto__' in {} ? '{{"lib/foundation/" | global_url }}js/vendor/zepto' : '{{"lib/foundation/" | global_url }}js/vendor/jquery') +
	'.js><\/script>')
	</script>
	<script src="{{'lib/foundation/' | global_url }}js/foundation/foundation.js"></script>

	{{ 'core.js' | resource_url | script_tag }}
</head>

<body>
	<div class="container">
		<header>
			<div class="subnav">
				<ul class="nav nav-pills">
					<li class="logo">
						<a href="{{ "/" | home_url }}">
							{% if theme.store_logo %}
								<img src="{{ theme.store_logo | resource_url }}" />
							{% else %}
								<span>{{ settings.store.name }}</span>
							{% endif %}
						</a>
					</li>

					{% for link in menu.main-menu.links %}
						<li {% if link.active %}class="active"{% endif %}>
							<a href="{{ link.href }}">{{ link.name }}</a>
							{% if link.links %}
							<ul class="submenu">
								{% for sublink in link.links %}
									<li {% if sublink.active %}class="active"{% endif %} >
										<a href="{{ sublink.href }}">{{ sublink.name }}</a>
									</li>
								{% endfor %}
							</ul>
							{% endif %}
						</li>
					{% endfor %}

					<li class="shopping-cart"><a href="/cart">Shopping cart</a></li>
				</ul>
			</div>
		</header>

		<div id="main">
			{{ content }}
		</div>

		<footer class="footer">
			<p class="pull-right">
				{{ powered_by }}
			</p>
			Copyright &copy; {{ "now" | date : "%Y" }} {{ settings.store.name }}
		</footer>
	</div>

</body>
</html>
